<h2>Список клиентов</h2>

<%= @results %>


<table class="table table-striped">
	<thead>
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>DateTime</th>
          <th>Barber</th>
          <th>Color</th>
        </tr>
    </thead>
    <tbody>  
		<% @results.each do |row| %>
			<tr>
			  <td><%= row['Username'] %></td>
			  <td><%= row['Phone'] %></td>
			  <td><%= row['Datestamp'] %></td>
			  <td><%= row['Barber'] %></td>
			  <td><%= row['Color'] %></td>
			</tr>
		<% end %>
	</tbody>

	
     
    </table>
